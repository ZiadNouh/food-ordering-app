generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String
  imageUrl    String
  basePrice   Float
  order       Int
  size        Size[]
  extra       Extra[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Size {
  id    String @id @default(uuid())
  name  String
  price Float

  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model Extra {
  id    String @id @default(uuid())
  name  String
  price Float

  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

enum ProductSizes {
  SMALL
  MEDIUM
  LARGE
}

enum ExtraIngredients {
  TOMATO
  CHEESE
  ONION
}
